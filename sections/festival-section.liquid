    },
	{
      "type": "text",
      "id": "product2link",
      "label": "Product 2 link"
    },
	{
      "type": "image_picker",
      "id": "product3img",
      "label": "Product 3 Image"
    },
	{
      "type": "text",
      "id": "product3title",
