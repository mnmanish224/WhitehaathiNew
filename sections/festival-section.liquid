    },
	{
      "type": "text",
      "id": "product1title",
      "label": "Product 1 title"
    },
	{
      "type": "text",
      "id": "product1link",
      "label": "Product 1 link"
    },
	{
      "type": "image_picker",
      "id": "product2img",
      "label": "Product 2 Image"
    },
	{
      "type": "text",
      "id": "product2title",
